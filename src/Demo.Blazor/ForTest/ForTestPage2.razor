                <DxGridDataColumn FieldName="@nameof(RecipeValueSettingDto.Type)" Caption="列3" />
                <DxGridDataColumn FieldName="@nameof(RecipeValueSettingDto.TopLimit)" Caption="列4" />
                <DxGridDataColumn FieldName="@nameof(RecipeValueSettingDto.LowerLimit)" Caption="列5" />
                <DxGridCommandColumn Width="150px">
                    <CellDisplayTemplate>
                        @{
                            <DxButton Click="() => Grid.StartEditDataItemAsync(context.DataItem)"
                                  RenderStyle="ButtonRenderStyle.None" IconCssClass="btn-icon-edit" style="height: 25px; width: 25px" />

                        }
                    </CellDisplayTemplate>
                </DxGridCommandColumn>
            </Columns>
        </DxGrid>



