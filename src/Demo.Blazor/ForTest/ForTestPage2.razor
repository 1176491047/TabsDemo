@using DevExpress.Blazor
@using BootstrapBlazor.Components
@attribute [TabItemOption(Text="测试页面2")]


                        <DxGrid @ref="Grid"
                Data="@RecipeList"
                ShowFilterRow="true"
                PopupEditFormCssClass="RecipeGroup5" 
                        FocusedRowEnabled="true">
